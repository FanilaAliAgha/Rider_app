<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sendmoney">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center|bottom"
        android:text="Send Cash"
        android:textColor="@color/orangecolor"
        android:textSize="28sp"
        android:textStyle="bold" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="Account Number:"
            android:textColor="@color/orangecolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/accountno"
            android:layout_width="385dp"
            android:layout_height="60dp"
            android:layout_below="@+id/account"
            android:background="@drawable/boders"
            android:padding="20dp"
            android:text="98-2088-6548-9363"
            android:textColor="@color/black"
            android:textColorHint="@color/orangecolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accountno"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="Name:"
            android:textColor="@color/orangecolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="385dp"
            android:layout_height="60dp"
            android:layout_below="@+id/name"
            android:background="@drawable/boders"
            android:padding="20dp"
            android:text="Azfar Rehman"
            android:textColor="@color/black"
            android:textColorHint="@color/orangecolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullname"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="Reciever's Name:"
            android:textColor="@color/orangecolor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/recfullname"
            android:layout_width="385dp"
            android:layout_height="60dp"
            android:layout_below="@+id/recname"
            android:background="@drawable/boders"
            android:hint="Abdul Rehman"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/recaccno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recfullname"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="Reciever's Mobile Account Number:"
            android:textColor="@color/orangecolor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/recfullacc"
            android:layout_width="385dp"
            android:layout_height="60dp"
            android:layout_below="@+id/recaccno"
            android:background="@drawable/boders"
            android:hint="03121121212"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/amonunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recfullacc"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="Amount in Rupees:"
            android:textColor="@color/orangecolor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/amountinrs"
            android:layout_width="385dp"
            android:layout_height="60dp"
            android:layout_below="@+id/amonunt"
            android:background="@drawable/boders"
            android:hint="40,000"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="transfer"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:ignore="MissingConstraints" />










    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/orangecolor"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>